/* TOAST OVERRIDE PENTRU A FI DEASUPRA SIDEBAR-ULUI */

/* Toast-uri în modal - poziționare relativă la BODY în loc de container */
.advanced-personal-form-container .e-toast-container,
.advanced-personal-form-container .personal-toast-container .e-toast-container,
.personal-toast-container .e-toast-container {
    position: fixed !important;
    top: 100px !important;
    right: 30px !important;
    left: auto !important;
    bottom: auto !important;
    width: auto !important;
    max-width: 350px !important;
    z-index: 99999 !important; /* INCREASED z-index */
}

.advanced-personal-form-container .e-toast,
.advanced-personal-form-container .personal-toast-container .e-toast,
.personal-toast-container .e-toast {
    z-index: 100000 !important; /* INCREASED z-index */
    position: relative !important;
    margin: 8px 0 !important;
    min-width: 300px !important;
    max-width: 350px !important;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25) !important; /* STRONGER shadow */
    border-radius: 8px !important;
    font-size: 14px !important;
    /* REMOVE any parent constraints */
    transform: none !important;
}

/* Forțează toate toast-urile să aibă z-index foarte mare pentru body */
.e-toast-container,
.e-toast-parent,
body .e-toast-container,
.personal-toast-container .e-toast-container {
    z-index: 999999 !important;
    position: fixed !important;
    top: 80px !important;
    right: 20px !important;
    left: auto !important;
    bottom: auto !important;
    width: auto !important;
    max-width: 400px !important;
    /* ENSURE no parent clipping */
    clip-path: none !important;
    overflow: visible !important;
}

/* Toast individual */
.e-toast,
body .e-toast,
.personal-toast-container .e-toast {
    z-index: 1000000 !important;
    position: relative !important;
    margin: 8px 0 !important;
    min-width: 320px !important;
    max-width: 400px !important;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.25) !important; /* STRONGER shadow */
    border-radius: 8px !important;
    /* PREVENT any clipping or hiding */
    transform: none !important;
    clip-path: none !important;
    overflow: visible !important;
}

/* Override pentru toate clasele Syncfusion */
[class*="e-toast"] {
    z-index: 999999 !important;
}

/* Fix pentru positioning în toate cazurile */
.e-toast-container > .e-toast {
    z-index: 1000000 !important;
}

/* SPECIFIC FIXES pentru probleme de navigare */
.advanced-personal-form-container .e-toast-container {
    pointer-events: auto !important; /* Ensure toasts can be interacted with */
}

.advanced-personal-form-container .e-toast {
    pointer-events: auto !important;
}

/* ANIMATION OVERRIDE - prevent conflicts during navigation */
.e-toast.e-toast-in {
    animation-duration: 300ms !important;
}

.e-toast.e-toast-out {
    animation-duration: 200ms !important;
}

/* CLEAR TOASTS - helper class pentru curățenie */
.clearing-toasts .e-toast-container,
.clearing-toasts .e-toast {
    display: none !important;
}
