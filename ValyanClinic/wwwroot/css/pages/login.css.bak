@charset "UTF-8";
/* ===== PAGINĂ LOGIN UNIFICATĂ - DESIGN CURAT 2025 ===== */
/* GRADIENT ALBASTRU FOARTE FIN ȘI SUBTIL */

/* IMPORT FONTURI GOOGLE CU SUPORT ROMÂNESC GARANTAT - ÎNAINTE DE ORICE */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap');

/* Reset și fundamente cu FONT STACK OPTIMIZAT PENTRU ROMÂNA */
*, *::before, *::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body {
  margin: 0;
  padding: 0;
  height: 100%;
  /* FONT STACK OPTIMIZAT PENTRU DIACRITICELE ROMÂNEȘTI */
  font-family: 
    /* Fonturi moderne cu suport complet UTF-8 */
    "Inter", "SF Pro Display", "SF Pro Text", 
    /* Fonturi system cu suport românesc garantat */
    -apple-system, BlinkMacSystemFont, 
    /* Fonturi Windows cu suport diacritice */
    "Segoe UI", "Segoe UI Variable", 
    /* Fonturi Google cu suport extins */
    "Roboto", "Open Sans", "Lato",
    /* Fonturi cross-platform sigure */
    "Helvetica Neue", "Arial", "Liberation Sans", "Noto Sans",
    /* Fallback-uri cu suport Unicode */
    "DejaVu Sans", "Verdana", "Tahoma", "Geneva",
    /* Fallback final */
    sans-serif;
    
  /* GRADIENT ALBASTRU FOARTE FIN - NUANȚE SUBTILE */
  background: linear-gradient(135deg, #4a90e2 0%, #5ba3f5 25%, #6db4ff 50%, #5ba3f5 75%, #4a90e2 100%);
  overflow: hidden;
  
  /* Îmbunătățiri pentru renderizarea fontului */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-feature-settings: "kern" 1, "liga" 1, "calt" 1;
  text-rendering: optimizeLegibility;
}

/* Container principal pentru pagină */
.login-page-wrapper {
  height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 1rem;
  /* GRADIENT ALBASTRU FOARTE FIN - VARIAȚIE SUBTILĂ */
  background: linear-gradient(135deg, 
    #4a90e2 0%,    /* Albastru principal */
    #5195e6 20%,   /* Albastru foarte ușor mai deschis */
    #589aea 40%,   /* Albastru mediu subtil */
    #5ba3f5 60%,   /* Albastru ușor mai strălucitor */
    #5195e6 80%,   /* Revenire la nuanța anterioară */
    #4a90e2 100%   /* Revenire la albastru principal */
  );
  position: relative;
  overflow: hidden;
}

/* Efecte de fundal - ALBASTRU FOARTE SUBTIL */
.login-page-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 20% 80%, rgba(74, 144, 226, 0.15) 0%, transparent 60%),
    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 40% 40%, rgba(91, 163, 245, 0.12) 0%, transparent 55%);
  animation: backgroundMove 25s ease-in-out infinite;
}

@keyframes backgroundMove {
  0%, 100% { opacity: 1; transform: scale(1) rotate(0deg); }
  50% { opacity: 0.7; transform: scale(1.03) rotate(0.5deg); }
}

/* CONTAINER UNIFICAT PRINCIPAL - FIX ÎN VIEWPORT */
.login-unified-card {
  width: 100%;
  max-width: 580px;
  height: auto;
  max-height: none;
  background: rgba(255, 255, 255, 0.96); /* UȘOR MAI OPAC PENTRU CONTRAST */
  border-radius: 24px;
  box-shadow: 
    0 32px 64px rgba(74, 144, 226, 0.15), /* UMBRĂ ALBASTRĂ SUBTILĂ */
    0 16px 32px rgba(74, 144, 226, 0.1),
    0 8px 16px rgba(74, 144, 226, 0.08);
  backdrop-filter: blur(20px);
  border: 1px solid rgba(255, 255, 255, 0.3); /* BORDER MAI VIZIBIL */
  padding: 2rem;
  position: relative;
  z-index: 10;
  animation: cardAppear 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
  overflow: hidden;
  
  /* FONT INHERITANCE PENTRU TOATE ELEMENTELE CARD */
  font-family: inherit;
}

/* TOATE TEXTELE MOȘTENESC FONTUL OPTIMIZAT, DAR ICONURILE NU */
.login-unified-card * {
  font-family: inherit;
}

/* EXCEPȚII PENTRU ICONURI FONT AWESOME */
.login-unified-card i,
.login-unified-card .fa,
.login-unified-card .fas,
.login-unified-card .far,
.login-unified-card .fab {
  font-family: "Font Awesome 6 Free", "Font Awesome 6 Pro", "FontAwesome", "fa solid 900", sans-serif !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

@keyframes cardAppear {
  0% { 
    opacity: 0; 
    transform: translateY(40px) scale(0.9); 
  }
  100% { 
    opacity: 1; 
    transform: translateY(0) scale(1); 
  }
}

/* HEADER CU LOGO ȘI TITLU - REDUS */
.login-header {
  text-align: center;
  margin-bottom: 1.25rem;
}

.login-logo-section {
  margin-bottom: 0.75rem;
}

.login-logo {
  width: 60px;
  height: 60px;
  margin: 0 auto;
  /* GRADIENT LOGO ALBASTRU FIN */
  background: linear-gradient(135deg, #4a90e2, #5ba3f5);
  border-radius: 15px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6px 18px rgba(74, 144, 226, 0.25); /* UMBRĂ ALBASTRĂ */
  animation: logoFloat 3s ease-in-out infinite;
}

@keyframes logoFloat {
  0%, 100% { transform: translateY(0px); }
  50% { transform: translateY(-2px); }
}

.login-logo img {
  width: 38px;
  height: 38px;
  object-fit: contain;
  filter: brightness(0) invert(1);
}

.login-logo i {
  font-size: 2rem;
  color: white;
  display: none;
  /* FONT AWESOME EXPLICIT PENTRU LOGO FALLBACK */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
}

/* Fallback pentru logo */
.login-logo img[src=""], .login-logo img:not([src]) {
  display: none;
}

.login-logo:has(img[src=""]) i,
.login-logo:has(img:not([src])) i {
  display: block;
}

.login-title-section {
  color: #2d3748;
}

.login-main-title {
  font-size: 1.625rem;
  font-weight: 700;
  margin-bottom: 0.25rem;
  /* GRADIENT TEXT ALBASTRU FIN */
  background: linear-gradient(135deg, #4a90e2, #5ba3f5);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-family: inherit;
}

.login-subtitle {
  font-size: 0.8125rem;
  color: #718096;
  font-weight: 500;
  font-family: inherit;
}

/* SEPARATOR ELEGANT - MINIMAL */
.login-separator {
  height: 1px;
  background: linear-gradient(90deg, transparent, #e2e8f0, transparent);
  margin: 1rem 0;
}

/* WELCOME SECTION - MINIMAL */
.login-welcome {
  text-align: center;
  margin-bottom: 1.25rem;
}

.welcome-title {
  font-size: 1.25rem;
  font-weight: 600;
  color: #2d3748;
  margin-bottom: 0.375rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.welcome-text {
  color: #718096;
  font-size: 0.8125rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

/* FORM STYLES - FOARTE COMPACT */
.login-form {
  width: 100%;
}

.form-group {
  margin-bottom: 1rem;
}

.form-label {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 600;
  color: #4a5568;
  margin-bottom: 0.5rem;
  font-size: 0.8125rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.form-label i {
  color: #4a90e2; /* ICON ALBASTRU TEMA */
  width: 14px;
  /* FONT AWESOME EXPLICIT PENTRU ICOANELE DE FORM */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

.form-input {
  width: 100%;
  padding: 0.875rem 1rem;
  border: 2px solid #e2e8f0;
  border-radius: 10px;
  font-size: 0.875rem;
  color: #2d3748;
  background: #ffffff;
  transition: all 0.2s ease;
  font-weight: 500;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR ÎN INPUT-URI */
  font-feature-settings: "kern" 1, "liga" 1;
}

.form-input:focus {
  outline: none;
  border-color: #4a90e2; /* FOCUS ALBASTRU TEMA */
  box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.15); /* FOCUS SHADOW ALBASTRU */
  transform: translateY(-1px);
}

.form-input:hover:not(:focus) {
  border-color: #cbd5e0;
}

.form-input.error {
  border-color: #f56565;
  box-shadow: 0 0 0 3px rgba(245, 101, 101, 0.1);
}

.form-input::placeholder {
  color: #a0aec0;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR ÎN PLACEHOLDER */
  font-feature-settings: "kern" 1, "liga" 1;
}

/* PASSWORD WRAPPER */
.password-wrapper {
  position: relative;
}

.password-toggle {
  position: absolute;
  right: 0.875rem;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: #a0aec0;
  cursor: pointer;
  padding: 0.375rem;
  border-radius: 6px;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
}

.password-toggle:hover {
  color: #4a90e2; /* HOVER ALBASTRU TEMA */
  background: #f7fafc;
}

.password-toggle i {
  /* FONT AWESOME EXPLICIT PENTRU PASSWORD TOGGLE */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

/* FORM OPTIONS - FOARTE COMPACT */
.form-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 1rem 0 1.25rem 0;
  flex-wrap: wrap;
  gap: 0.75rem;
}

.remember-checkbox {
  display: flex;
  align-items: center;
  cursor: pointer;
  position: relative;
  padding-left: 1.75rem;
  font-size: 0.8125rem;
  color: #4a5568;
  font-weight: 500;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.remember-checkbox input[type="checkbox"] {
  position: absolute;
  left: 0;
  opacity: 0;
  cursor: pointer;
}

.checkmark {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 18px;
  width: 18px;
  background-color: #ffffff;
  border: 2px solid #e2e8f0;
  border-radius: 5px;
  transition: all 0.2s ease;
}

.remember-checkbox:hover input ~ .checkmark {
  border-color: #4a90e2; /* HOVER ALBASTRU TEMA */
}

.remember-checkbox input:checked ~ .checkmark {
  background-color: #4a90e2; /* CHECKED ALBASTRU TEMA */
  border-color: #4a90e2;
}

.remember-checkbox input:checked ~ .checkmark::after {
  content: '';
  position: absolute;
  left: 5px;
  top: 1px;
  width: 5px;
  height: 9px;
  border: solid white;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
}

.checkbox-text {
  margin-left: 0.375rem;
  font-family: inherit;
}

.forgot-link {
  color: #4a90e2; /* LINK ALBASTRU TEMA */
  text-decoration: none;
  font-weight: 500;
  font-size: 0.8125rem;
  transition: all 0.2s ease;
  padding: 0.1875rem;
  border-radius: 4px;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.forgot-link:hover {
  color: #3182ce; /* HOVER MAI ÎNCHIS */
  text-decoration: underline;
  background: rgba(74, 144, 226, 0.08); /* BACKGROUND ALBASTRU SUBTIL */
}

/* LOGIN BUTTON - COMPACT */
.login-button {
  width: 100%;
  padding: 1rem 1.75rem;
  /* GRADIENT BUTTON ALBASTRU FIN */
  background: linear-gradient(135deg, #4a90e2 0%, #5ba3f5 100%);
  color: white;
  border: none;
  border-radius: 10px;
  font-size: 0.9375rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.625rem;
  box-shadow: 0 4px 12px rgba(74, 144, 226, 0.3); /* SHADOW ALBASTRU */
  text-transform: none;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR ÎN BUTTON */
  font-feature-settings: "kern" 1, "liga" 1;
}

.login-button:hover:not(:disabled) {
  /* HOVER GRADIENT ALBASTRU MAI INTENS */
  background: linear-gradient(135deg, #3182ce 0%, #4a90e2 100%);
  transform: translateY(-2px);
  box-shadow: 0 8px 24px rgba(74, 144, 226, 0.4);
}

.login-button:active:not(:disabled) {
  transform: translateY(0);
}

.login-button:disabled {
  opacity: 0.7;
  cursor: not-allowed;
  transform: none;
}

.login-button.loading {
  pointer-events: none;
}

.login-button span {
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR ÎN BUTTON TEXT */
  font-feature-settings: "kern" 1, "liga" 1;
}

.login-button i {
  /* FONT AWESOME EXPLICIT PENTRU BUTTON ICONS */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

.button-spinner {
  width: 16px;
  height: 16px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top: 2px solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* ERROR MESSAGES - MINIMAL */
.form-error,
.error-message,
.warning-message {
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.625rem 0.875rem;
  border-radius: 7px;
  font-size: 0.8125rem;
  font-weight: 500;
  margin-top: 0.625rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR ÎN MESAJE */
  font-feature-settings: "kern" 1, "liga" 1;
}

.form-error,
.error-message {
  background: #fed7d7;
  color: #c53030;
  border: 1px solid #feb2b2;
}

.warning-message {
  background: #fefcbf;
  color: #d69e2e;
  border: 1px solid #faf089;
}

.form-error i,
.error-message i,
.warning-message i {
  /* FONT AWESOME EXPLICIT PENTRU ERROR ICONS */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

/* FOOTER - FOARTE COMPACT */
.login-footer {
  margin-top: 1.25rem;
  text-align: center;
  padding-top: 1rem;
  border-top: 1px solid #e2e8f0;
}

.security-notice {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.375rem;
  color: #718096;
  font-size: 0.75rem;
  margin-bottom: 0.75rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.security-notice i {
  color: #48bb78;
  /* FONT AWESOME EXPLICIT PENTRU SECURITY ICON */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

.security-notice span {
  font-family: inherit;
}

.footer-links {
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
  align-items: center;
}

.copyright {
  color: #a0aec0;
  font-size: 0.6875rem;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.support-link {
  color: #4a90e2; /* LINK ALBASTRU TEMA */
  text-decoration: none;
  font-size: 0.75rem;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 0.375rem;
  padding: 0.375rem;
  border-radius: 5px;
  transition: all 0.2s ease;
  font-family: inherit;
  /* FORȚEAZĂ AFIȘAREA CORECTĂ A DIACRITICELOR */
  font-feature-settings: "kern" 1, "liga" 1;
}

.support-link:hover {
  color: #3182ce; /* HOVER MAI ÎNCHIS */
  background: rgba(74, 144, 226, 0.08); /* BACKGROUND ALBASTRU SUBTIL */
}

.support-link i {
  /* FONT AWESOME EXPLICIT PENTRU SUPPORT ICON */
  font-family: "Font Awesome 6 Free", "FontAwesome" !important;
  font-weight: 900 !important;
  font-style: normal !important;
}

/* RESPONSIVE DESIGN - FĂRĂ SCROLL */
@media (max-width: 640px) {
  .login-page-wrapper {
    padding: 0.75rem;
  }
  
  .login-unified-card {
    padding: 1.5rem;
    max-width: 100%;
  }
  
  .login-main-title {
    font-size: 1.5rem;
  }
  
  .welcome-title {
    font-size: 1.125rem;
  }
  
  .form-options {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.625rem;
  }
  
  .footer-links {
    gap: 0.375rem;
  }
}

@media (max-width: 480px) {
  html, body {
    overflow: hidden;
    /* GRADIENT MOBIL ALBASTRU FIN */
    background: linear-gradient(180deg, #4a90e2 0%, #5195e6 50%, #4a90e2 100%);
  }
  
  .login-page-wrapper {
    height: 100vh;
    padding: 0.5rem;
    /* GRADIENT MOBIL ALBASTRU FIN */
    background: linear-gradient(180deg, #4a90e2 0%, #5195e6 50%, #4a90e2 100%);
  }
  
  .login-unified-card {
    padding: 1.25rem;
    border-radius: 12px;
  }
  
  .login-logo {
    width: 50px;
    height: 50px;
  }
  
  .login-logo img {
    width: 32px;
    height: 32px;
  }
  
  .login-logo i {
    font-size: 1.625rem;
  }
  
  .form-group {
    margin-bottom: 0.875rem;
  }
  
  .form-input {
    padding: 0.75rem 0.875rem;
  }
  
  .login-button {
    padding: 0.875rem 1.25rem;
    font-size: 0.875rem;
  }
  
  .login-header {
    margin-bottom: 1rem;
  }
  
  .login-welcome {
    margin-bottom: 1rem;
  }
  
  .login-footer {
    margin-top: 1rem;
    padding-top: 0.75rem;
  }
}

/* ELIMINARE COMPLETĂ SCROLL - FORȚATĂ */
@media (max-height: 700px) {
  .login-unified-card {
    padding: 1.5rem;
  }
  
  .login-header {
    margin-bottom: 1rem;
  }
  
  .login-welcome {
    margin-bottom: 1rem;
  }
  
  .login-footer {
    margin-top: 1rem;
  }
}

/* ANIMAȚII PENTRU PERFORMANȚĂ */
@media (prefers-reduced-motion: reduce) {
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
  }
}