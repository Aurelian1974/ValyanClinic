@* Personal Medical Navigation Component *@
@inject NavigationManager Navigation

<div class="personal-medical-navigation">
    <nav aria-label="Personal Medical Navigation" class="breadcrumb-nav">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/" class="breadcrumb-link">
                    <i class="fas fa-home"></i>
                    <span>Acasa</span>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="/administrare" class="breadcrumb-link">
                    <i class="fas fa-cogs"></i>
                    <span>Administrare</span>
                </a>
            </li>
            <li class="breadcrumb-item">
                <div class="breadcrumb-dropdown">
                    <button class="breadcrumb-dropdown-toggle" @onclick="TogglePersonalDropdown">
                        <i class="fas fa-users"></i>
                        <span>Personal</span>
                        <i class="fas fa-chevron-down dropdown-arrow @(showPersonalDropdown ? "rotate" : "")"></i>
                    </button>
                    
                    @if (showPersonalDropdown)
                    {
                        <div class="breadcrumb-dropdown-menu">
                            <a href="/administrare/personal" class="dropdown-item @(IsCurrentPage("/administrare/personal") ? "active" : "")">
                                <i class="fas fa-users"></i>
                                <div class="dropdown-item-content">
                                    <span class="dropdown-item-title">Personal Administrativ</span>
                                    <small class="dropdown-item-description">Gestionare personal non-medical</small>
                                </div>
                            </a>
                            
                            <a href="/administrare/personal-medical" class="dropdown-item @(IsCurrentPage("/administrare/personal-medical") ? "active" : "")">
                                <i class="fas fa-user-md"></i>
                                <div class="dropdown-item-content">
                                    <span class="dropdown-item-title">Personal Medical</span>
                                    <small class="dropdown-item-description">Doctori, asistente, specialisti</small>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                <i class="fas fa-user-md"></i>
                <span>Personal Medical</span>
            </li>
        </ol>
    </nav>
    
    <div class="quick-actions">
        <a href="/administrare/personal" class="quick-action-btn admin-personal">
            <i class="fas fa-users"></i>
            <span>Personal Administrativ</span>
        </a>
        
        <a href="/utilizatori" class="quick-action-btn users">
            <i class="fas fa-user-cog"></i>
            <span>Utilizatori</span>
        </a>
        
        <button class="quick-action-btn help" @onclick="ShowHelp">
            <i class="fas fa-question-circle"></i>
            <span>Ajutor</span>
        </button>
    </div>
</div>

@code {
    private bool showPersonalDropdown = false;

    private void TogglePersonalDropdown()
    {
        showPersonalDropdown = !showPersonalDropdown;
        StateHasChanged();
    }

    private bool IsCurrentPage(string path)
    {
        return Navigation.Uri.EndsWith(path, StringComparison.OrdinalIgnoreCase);
    }

    private void ShowHelp()
    {
        // TODO: Implement help functionality
        // Could open a modal with help content or navigate to help page
    }
}

<style>
/* Personal Medical Navigation Styles */
.personal-medical-navigation {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    padding: 16px 24px;
    border-radius: 8px;
    margin-bottom: 24px;
    box-shadow: 0 4px 16px rgba(16, 185, 129, 0.2);
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: white;
}

.breadcrumb-nav {
    flex: 1;
}

.breadcrumb {
    display: flex;
    align-items: center;
    margin: 0;
    padding: 0;
    list-style: none;
    gap: 8px;
}

.breadcrumb-item {
    display: flex;
    align-items: center;
    position: relative;
}

.breadcrumb-item:not(:last-child)::after {
    content: '>';
    margin: 0 8px;
    color: rgba(255, 255, 255, 0.6);
    font-weight: 600;
}

.breadcrumb-link {
    display: flex;
    align-items: center;
    gap: 6px;
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    padding: 6px 12px;
    border-radius: 4px;
    transition: all 0.2s ease;
    font-size: 14px;
}

.breadcrumb-link:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
    text-decoration: none;
}

.breadcrumb-item.active {
    color: white;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
}

/* Breadcrumb Dropdown */
.breadcrumb-dropdown {
    position: relative;
}

.breadcrumb-dropdown-toggle {
    display: flex;
    align-items: center;
    gap: 6px;
    background: none;
    border: none;
    color: rgba(255, 255, 255, 0.9);
    padding: 6px 12px;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 14px;
}

.breadcrumb-dropdown-toggle:hover {
    background: rgba(255, 255, 255, 0.15);
    color: white;
}

.dropdown-arrow {
    font-size: 10px;
    transition: transform 0.2s ease;
}

.dropdown-arrow.rotate {
    transform: rotate(180deg);
}

.breadcrumb-dropdown-menu {
    position: absolute;
    top: 100%;
    left: 0;
    background: white;
    border-radius: 8px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
    padding: 8px 0;
    min-width: 280px;
    z-index: 1000;
    border: 1px solid rgba(0, 0, 0, 0.1);
    margin-top: 8px;
}

.dropdown-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    color: #374151;
    text-decoration: none;
    transition: all 0.2s ease;
    border: none;
    background: none;
    width: 100%;
}

.dropdown-item:hover {
    background: #f3f4f6;
    color: #10b981;
    text-decoration: none;
}

.dropdown-item.active {
    background: #ecfdf5;
    color: #10b981;
    border-left: 3px solid #10b981;
}

.dropdown-item i {
    font-size: 16px;
    width: 20px;
    text-align: center;
}

.dropdown-item-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
}

.dropdown-item-title {
    font-weight: 600;
    font-size: 14px;
}

.dropdown-item-description {
    color: #6b7280;
    font-size: 12px;
}

/* Quick Actions */
.quick-actions {
    display: flex;
    gap: 8px;
    align-items: center;
}

.quick-action-btn {
    display: flex;
    align-items: center;
    gap: 6px;
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 8px 12px;
    border-radius: 6px;
    text-decoration: none;
    font-size: 12px;
    font-weight: 500;
    transition: all 0.2s ease;
    cursor: pointer;
    backdrop-filter: blur(10px);
}

.quick-action-btn:hover {
    background: rgba(255, 255, 255, 0.25);
    color: white;
    text-decoration: none;
    transform: translateY(-1px);
}

.quick-action-btn i {
    font-size: 14px;
}

/* Responsive Design */
@@media (max-width: 768px) {
    .personal-medical-navigation {
        flex-direction: column;
        gap: 16px;
        padding: 16px;
    }
    
    .breadcrumb {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .breadcrumb-dropdown-menu {
        min-width: 250px;
        left: -50px;
    }
    
    .quick-actions {
        justify-content: center;
    }
    
    .quick-action-btn span {
        display: none;
    }
    
    .quick-action-btn {
        padding: 8px;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        justify-content: center;
    }
}

@@media (max-width: 480px) {
    .breadcrumb-link span,
    .breadcrumb-dropdown-toggle span,
    .breadcrumb-item.active span {
        display: none;
    }
    
    .breadcrumb-link,
    .breadcrumb-dropdown-toggle {
        padding: 6px;
    }
}

/* Animation for dropdown */
.breadcrumb-dropdown-menu {
    animation: slideDown 0.2s ease-out;
}

@@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}
</style>
