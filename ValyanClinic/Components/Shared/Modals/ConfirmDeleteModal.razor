@if (IsVisible)
{
    <div class="modal-overlay visible" @onclick="HandleOverlayClick">
        <div class="modal-container @(IsVisible ? "show" : "")" @onclick:stopPropagation="true">
            <div class="modal-header">
                <div class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i>
                    <h2>Confirmare Stergere</h2>
                </div>
                <button class="btn-close" @onclick="Close" type="button">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="modal-body">
                @if (IsLoading)
                {
                    <div class="loading-container">
                        <div class="spinner-border text-danger" role="status">
                            <span class="visually-hidden">Se proceseaza...</span>
                        </div>
                        <p>Se sterge...</p>
                    </div>
                }
                else if (HasError)
                {
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle"></i>
                        @ErrorMessage
                    </div>
                    <div class="error-actions">
                        <button class="btn btn-secondary" @onclick="Close" type="button">
                            <i class="fas fa-times"></i>
                            <span>Inchide</span>
                        </button>
                        <button class="btn btn-danger" @onclick="RetryDelete" type="button">
                            <i class="fas fa-redo"></i>
                            <span>Incearca Din Nou</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="warning-content">
                        <div class="warning-icon">
                            <i class="fas fa-trash-alt"></i>
                        </div>
                        <h3>Confirmare Stergere</h3>
                        <p class="warning-text">
                            Esti sigur ca vrei sa stergi <strong>@ItemName</strong>?
                        </p>
                        <p class="warning-subtext">
                            Aceasta actiune va sterge definitiv datele. Operatiunea nu poate fi anulata.
                        </p>

                        <div class="confirmation-input">
                            <label for="confirmText">
                                Scrie <strong>STERGE</strong> pentru confirmare:
                            </label>
                            <input type="text" 
                                   id="confirmText" 
                                   class="form-input"
                                   @bind="ConfirmationText"
                                   @bind:event="oninput"
                                   placeholder="STERGE"
                                   @onkeydown="HandleKeyDown"
                                   disabled="@(CountdownSeconds > 0)" />
                        </div>

                        @if (CountdownSeconds > 0)
                        {
                            <div class="countdown-info">
                                <i class="fas fa-clock"></i>
                                <span>Asteapta <strong>@CountdownSeconds</strong> secunde...</span>
                            </div>
                        }
                        else if (!string.IsNullOrWhiteSpace(ConfirmationText) && !CanConfirm)
                        {
                            <div class="validation-error">
                                <i class="fas fa-times-circle"></i>
                                <span>Trebuie sa scrii exact <strong>STERGE</strong></span>
                            </div>
                        }
                    </div>
                }
            </div>

            @if (!HasError)
            {
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="Close" type="button" disabled="@IsLoading">
                        <i class="fas fa-times"></i>
                        <span>Anuleaza</span>
                    </button>
                    <button class="btn btn-danger" 
                            @onclick="HandleConfirm" 
                            type="button"
                            disabled="@(!CanConfirm || IsLoading)">
                        <i class="fas fa-trash"></i>
                        <span>Sterge Definitiv</span>
                    </button>
                </div>
            }
        </div>
    </div>
}
