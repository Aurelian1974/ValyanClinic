@using Microsoft.AspNetCore.Components

<div class="page-header-component">
    <div class="header-content">
        <div class="header-left">
            @if (!string.IsNullOrEmpty(Icon))
            {
                <div class="header-icon">@Icon</div>
            }
            <div class="header-text">
                <h1 class="header-title">@Title</h1>
                @if (!string.IsNullOrEmpty(Subtitle))
                {
                    <p class="header-subtitle">@Subtitle</p>
                }
            </div>
        </div>

        <div class="header-actions">
            @if (ShowBackButton)
            {
                <button class="btn-secondary header-back-btn" @onclick="HandleBackClick">
                    <span class="btn-icon">?</span>
                    Inapoi
                </button>
            }
            
            @if (Actions != null)
            {
                <div class="header-action-buttons">
                    @Actions
                </div>
            }
        </div>
    </div>

    @if (Breadcrumbs != null && Breadcrumbs.Any())
    {
        <div class="breadcrumb-container">
            <nav class="breadcrumb">
                @for (int i = 0; i < Breadcrumbs.Count; i++)
                {
                    var breadcrumb = Breadcrumbs[i];
                    var isLast = i == Breadcrumbs.Count - 1;
                    
                    @if (isLast)
                    {
                        <span class="breadcrumb-current">@breadcrumb.Text</span>
                    }
                    else
                    {
                        <a href="@breadcrumb.Url" class="breadcrumb-link">@breadcrumb.Text</a>
                        <span class="breadcrumb-separator">›</span>
                    }
                }
            </nav>
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = string.Empty;
    [Parameter] public string? Subtitle { get; set; }
    [Parameter] public string? Icon { get; set; }
    [Parameter] public bool ShowBackButton { get; set; } = false;
    [Parameter] public RenderFragment? Actions { get; set; }
    [Parameter] public List<BreadcrumbItem>? Breadcrumbs { get; set; }
    [Parameter] public EventCallback OnBackClick { get; set; }

    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private async Task HandleBackClick()
    {
        if (OnBackClick.HasDelegate)
        {
            await OnBackClick.InvokeAsync();
        }
        else
        {
            Navigation.NavigateTo("/");
        }
    }

    public class BreadcrumbItem
    {
        public string Text { get; set; } = string.Empty;
        public string Url { get; set; } = string.Empty;

        public BreadcrumbItem() { }

        public BreadcrumbItem(string text, string url)
        {
            Text = text;
            Url = url;
        }
    }
}