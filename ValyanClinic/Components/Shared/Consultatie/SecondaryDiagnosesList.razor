@*
    Secondary Diagnoses List - Multiple diagnoses with ICD10 codes
    Features:
    - Add up to 10 secondary diagnoses
    - Each diagnosis: text description + multiple ICD10 codes
    - Counter showing current/max diagnoses
    - Remove functionality
    - Validation
*@
@using ValyanClinic.Components.Shared.ICD10

<div class="secondary-diagnoses-list">
    <div class="secondary-header">
        <label class="form-label">
            <i class="fas fa-list-ul"></i> Diagnostic Secundar
            <span class="counter">
                (Puteți adăuga maxim 10 diagnostice secundare - <strong>@SecondaryDiagnoses.Count/10</strong>)
            </span>
        </label>
    </div>

    @if (!SecondaryDiagnoses.Any())
    {
        <div class="empty-state">
            <i class="fas fa-notes-medical"></i>
            <p>Nu ați adăugat încă diagnostice secundare</p>
            <button type="button" class="btn-add-diagnosis primary" @onclick="AddSecondaryDiagnosis" disabled="@IsMaxReached">
                <i class="fas fa-plus"></i> Adaugă primul diagnostic secundar
            </button>
        </div>
    }
    else
    {
        <div class="diagnoses-container">
            @foreach (var (diagnosis, index) in SecondaryDiagnoses.Select((d, i) => (d, i)))
            {
                <div class="diagnosis-card @(ShowValidation && !ValidateDiagnosis(diagnosis) ? "invalid" : "")">
                    <div class="diagnosis-card-header">
                        <div class="diagnosis-number">
                            <i class="fas fa-notes-medical"></i>
                            Diagnostic Secundar #@(index + 1)
                        </div>
                        <button type="button" class="btn-remove" @onclick="() => RemoveSecondaryDiagnosis(index)" title="Elimină diagnostic">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>

                    <div class="diagnosis-card-body">
                        <!-- Text Description -->
                        <div class="form-group">
                            <label class="form-label required">Descriere diagnostic</label>
                            <textarea class="form-textarea"
                                      rows="2"
                                      placeholder="Descrieți diagnosticul secundar..."
                                      @bind="diagnosis.Description"
                                      @bind:event="oninput"
                                      @onchange="NotifyChange"></textarea>
                            @if (ShowValidation && string.IsNullOrWhiteSpace(diagnosis.Description))
                            {
                                <div class="validation-message">
                                    <i class="fas fa-exclamation-circle"></i>
                                    Descrierea este obligatorie
                                </div>
                            }
                        </div>

                        <!-- ICD10 Codes -->
                        <div class="form-group">
                            <label class="form-label">Coduri ICD-10 (maxim 10)</label>
                            
                            <!-- Search Box -->
                            @if (diagnosis.ICD10Codes.Count < 10)
                            {
                                <ICD10SearchBox Placeholder="Adaugă cod ICD-10..."
                                                OnCodeSelected="(code) => AddICD10Code(diagnosis, code)"
                                                CurrentUserId="@CurrentUserId"
                                                MinSearchLength="2"
                                                MaxResults="10" />
                            }
                            else
                            {
                                <div class="limit-reached-message">
                                    <i class="fas fa-info-circle"></i>
                                    Limită atinsă: 10 coduri ICD-10 per diagnostic
                                </div>
                            }

                            <!-- Selected Codes Display -->
                            @if (diagnosis.ICD10Codes.Any())
                            {
                                <div class="selected-codes-list">
                                    @foreach (var icd10Code in diagnosis.ICD10Codes)
                                    {
                                        <div class="code-chip">
                                            <span class="code-text">@(icd10Code.Code)</span>
                                            <span class="code-name">@icd10Code.ShortDescription</span>
                                            <button type="button" class="btn-remove-chip" @onclick="() => RemoveICD10Code(diagnosis, icd10Code)" title="Elimină cod">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Optional: Additional Details -->
                        <div class="form-group">
                            <label class="form-label">Detalii suplimentare (opțional)</label>
                            <textarea class="form-textarea"
                                      rows="2"
                                      placeholder="Observații, evoluție, severitate..."
                                      @bind="diagnosis.AdditionalDetails"
                                      @bind:event="oninput"
                                      @onchange="NotifyChange"></textarea>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Add Button (if under limit) -->
        @if (!IsMaxReached)
        {
            <button type="button" class="btn-add-diagnosis" @onclick="AddSecondaryDiagnosis">
                <i class="fas fa-plus"></i> Adaugă diagnostic secundar (@SecondaryDiagnoses.Count/10)
            </button>
        }
        else
        {
            <div class="limit-reached-message">
                <i class="fas fa-exclamation-triangle"></i>
                Ați atins limita maximă de 10 diagnostice secundare
            </div>
        }
    }
</div>
