@*
    Tab Concluzie - Consultație
    Include: Prognostic, Concluzie, Observații
*@

<div class="tab-pane @(IsActive ? "active" : "")" id="tab-concluzie">
    <div class="section-card">
        <h5 class="section-title">
            <i class="fas fa-check-circle"></i>
            VII. Prognostic și Concluzie
        </h5>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="required">Prognostic</label>
                    <select class="form-control @(ShowValidation && string.IsNullOrWhiteSpace(Model.Prognostic) ? "is-invalid" : "")" 
                            @bind="Model.Prognostic"
                            @bind:after="OnFieldChanged">
                        <option value="">Selectează...</option>
                        <option value="Favorabil">Favorabil</option>
                        <option value="Rezervat">Rezervat</option>
                        <option value="Sever">Sever</option>
                    </select>
                    @if (ShowValidation && string.IsNullOrWhiteSpace(Model.Prognostic))
                    {
                        <div class="invalid-feedback">Prognosticul este obligatoriu</div>
                    }
                </div>
            </div>
            
            <div class="col-12">
                <div class="form-group">
                    <label class="required">Concluzie</label>
                    <textarea class="form-control @(ShowValidation && string.IsNullOrWhiteSpace(Model.Concluzie) ? "is-invalid" : "")" 
                              rows="4" 
                              placeholder="Rezumat consultație și plan terapeutic..."
                              @bind="Model.Concluzie"
                              @oninput="OnFieldChanged"></textarea>
                    <small class="form-text">Sinteză consultație și recomandări finale</small>
                    @if (ShowValidation && string.IsNullOrWhiteSpace(Model.Concluzie))
                    {
                        <div class="invalid-feedback">Concluzia este obligatorie</div>
                    }
                </div>
            </div>
            
            <div class="col-12">
                <div class="form-group">
                    <label>Observații Medic</label>
                    <textarea class="form-control" rows="3" 
                              placeholder="Note suplimentare pentru dosar medical..."
                              @bind="Model.ObservatiiMedic"
                              @oninput="OnFieldChanged"></textarea>
                    <small class="form-text">Informații pentru uz intern (nu apar în scrisoare medicală)</small>
                </div>
            </div>
            
            <div class="col-12">
                <div class="form-group">
                    <label>Note Pacient</label>
                    <textarea class="form-control" rows="2" 
                              placeholder="Informații menționate de pacient..."
                              @bind="Model.NotePacient"
                              @oninput="OnFieldChanged"></textarea>
                    <small class="form-text">Cereri, preocupări sau întrebări ale pacientului</small>
                </div>
            </div>
        </div>
    </div>

    @* ==================== SCRISOARE MEDICALĂ - ANEXA 43 ==================== *@
    <div class="section-card mt-3">
        <h5 class="section-title">
            <i class="fas fa-file-medical"></i>
            VIII. Documente Emise (Scrisoare Medicală - Anexa 43)
        </h5>
        
        @* Afecțiune Oncologică *@
        <div class="row mb-3">
            <div class="col-12">
                <div class="oncologic-status-box">
                    <label class="form-label fw-bold">Pacient diagnosticat cu afecțiune oncologică:</label>
                    <div class="d-flex align-items-center gap-4 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="oncologic" id="oncologicDa"
                                   checked="@Model.EsteAfectiuneOncologica"
                                   @onchange="() => { Model.EsteAfectiuneOncologica = true; OnFieldChanged(); }">
                            <label class="form-check-label" for="oncologicDa">DA</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="oncologic" id="oncologicNu"
                                   checked="@(!Model.EsteAfectiuneOncologica)"
                                   @onchange="() => { Model.EsteAfectiuneOncologica = false; OnFieldChanged(); }">
                            <label class="form-check-label" for="oncologicNu">NU</label>
                        </div>
                    </div>
                    @if (Model.EsteAfectiuneOncologica)
                    {
                        <div class="mt-2">
                            <input type="text" class="form-control" 
                                   placeholder="Detalii afecțiune oncologică..."
                                   @bind="Model.DetaliiAfectiuneOncologica"
                                   @oninput="OnFieldChanged">
                        </div>
                    }
                </div>
            </div>
        </div>

        @* Indicație Internare *@
        <div class="row mb-3">
            <div class="col-12">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-hospital me-2"></i>Indicație de revenire pentru internare:
                    </label>
                    <div class="d-flex align-items-center gap-4 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="indicatieInternare"
                                   checked="@Model.AreIndicatieInternare"
                                   @onchange="(e) => { Model.AreIndicatieInternare = (bool)(e.Value ?? false); OnFieldChanged(); }">
                            <label class="form-check-label" for="indicatieInternare">Da, revine pentru internare</label>
                        </div>
                        @if (Model.AreIndicatieInternare)
                        {
                            <input type="text" class="form-control w-auto" style="max-width: 250px;"
                                   placeholder="Termen internare..."
                                   @bind="Model.TermenInternare"
                                   @oninput="OnFieldChanged">
                        }
                    </div>
                </div>
            </div>
        </div>

        @* Prescripție Medicală *@
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-prescription me-2"></i>Prescripție medicală:
                    </label>
                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="prescriptie" id="prescriptieDa"
                                   checked="@(Model.SaEliberatPrescriptie == true)"
                                   @onchange="() => { Model.SaEliberatPrescriptie = true; OnFieldChanged(); }">
                            <label class="form-check-label" for="prescriptieDa">S-a eliberat prescripție medicală</label>
                        </div>
                        @if (Model.SaEliberatPrescriptie == true)
                        {
                            <input type="text" class="form-control mt-1 ms-4" style="max-width: 200px;"
                                   placeholder="Serie prescripție..."
                                   @bind="Model.SeriePrescriptie"
                                   @oninput="OnFieldChanged">
                        }
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="prescriptie" id="prescriptieNu"
                                   checked="@(Model.SaEliberatPrescriptie == false)"
                                   @onchange="() => { Model.SaEliberatPrescriptie = false; Model.SeriePrescriptie = null; OnFieldChanged(); }">
                            <label class="form-check-label" for="prescriptieNu">Nu s-a eliberat (nu a fost necesar)</label>
                        </div>
                    </div>
                </div>
            </div>

            @* Concediu Medical *@
            <div class="col-md-6">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-file-medical-alt me-2"></i>Concediu medical:
                    </label>
                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="concediu" id="concediuDa"
                                   checked="@(Model.SaEliberatConcediuMedical == true)"
                                   @onchange="() => { Model.SaEliberatConcediuMedical = true; OnFieldChanged(); }">
                            <label class="form-check-label" for="concediuDa">S-a eliberat concediu medical</label>
                        </div>
                        @if (Model.SaEliberatConcediuMedical == true)
                        {
                            <input type="text" class="form-control mt-1 ms-4" style="max-width: 200px;"
                                   placeholder="Serie și număr..."
                                   @bind="Model.SerieConcediuMedical"
                                   @oninput="OnFieldChanged">
                        }
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="concediu" id="concediuNu"
                                   checked="@(Model.SaEliberatConcediuMedical == false)"
                                   @onchange="() => { Model.SaEliberatConcediuMedical = false; Model.SerieConcediuMedical = null; OnFieldChanged(); }">
                            <label class="form-check-label" for="concediuNu">Nu s-a eliberat (nu a fost necesar)</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Îngrijiri la Domiciliu & Dispozitive Medicale *@
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-home me-2"></i>Îngrijiri medicale la domiciliu:
                    </label>
                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="ingrijiriDomiciliu"
                                   checked="@(Model.SaEliberatIngrijiriDomiciliu == true)"
                                   @onchange="(e) => { Model.SaEliberatIngrijiriDomiciliu = (bool)(e.Value ?? false); OnFieldChanged(); }">
                            <label class="form-check-label" for="ingrijiriDomiciliu">S-a eliberat recomandare îngrijiri la domiciliu</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-medkit me-2"></i>Dispozitive medicale:
                    </label>
                    <div class="mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="dispozitiveMedicale"
                                   checked="@(Model.SaEliberatDispozitiveMedicale == true)"
                                   @onchange="(e) => { Model.SaEliberatDispozitiveMedicale = (bool)(e.Value ?? false); OnFieldChanged(); }">
                            <label class="form-check-label" for="dispozitiveMedicale">S-a eliberat prescripție dispozitive medicale</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @* Calea de Transmitere *@
        <div class="row mb-3">
            <div class="col-12">
                <div class="document-checkbox-group">
                    <label class="form-label fw-bold">
                        <i class="fas fa-paper-plane me-2"></i>Calea de transmitere scrisoare medicală:
                    </label>
                    <div class="d-flex align-items-center gap-4 mt-2">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="transmitere" id="transmitereAsigurat"
                                   checked="@(!Model.TransmiterePrinEmail)"
                                   @onchange="() => { Model.TransmiterePrinEmail = false; Model.EmailTransmitere = null; OnFieldChanged(); }">
                            <label class="form-check-label" for="transmitereAsigurat">Prin asigurat</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="transmitere" id="transmitereEmail"
                                   checked="@Model.TransmiterePrinEmail"
                                   @onchange="() => { Model.TransmiterePrinEmail = true; OnFieldChanged(); }">
                            <label class="form-check-label" for="transmitereEmail">Prin poștă electronică</label>
                        </div>
                        @if (Model.TransmiterePrinEmail)
                        {
                            <input type="email" class="form-control w-auto" style="max-width: 250px;"
                                   placeholder="email@exemplu.ro"
                                   @bind="Model.EmailTransmitere"
                                   @oninput="OnFieldChanged">
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @* Completion Summary *@
    @if (IsSectionCompleted)
    {
        <div class="completion-summary">
            <div class="completion-header">
                <i class="fas fa-clipboard-check"></i>
                <h6>Consultație Completă</h6>
            </div>
            <p>Toate câmpurile obligatorii au fost completate. Puteți finaliza consultația.</p>
            <div class="completion-actions">
                <button type="button" class="btn btn-outline-primary" @onclick="OnPreview">
                    <i class="fas fa-file-pdf"></i>
                    Preview Scrisoare Medicală
                </button>
            </div>
        </div>
    }
</div>
