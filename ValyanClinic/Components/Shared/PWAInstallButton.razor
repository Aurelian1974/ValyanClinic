@code {
    private bool _canInstall;
    private bool _isInstalled;
    private bool _isOnline = true;
    private int _queueCount;
    private bool _dismissed;

    protected override async Task OnInitializedAsync()
    {
        // IniÈ›ializeazÄƒ PWA Service
        await PWA.InitializeAsync();

        // ObÈ›ine status
        var status = await PWA.GetStatusAsync();
        if (status != null)
        {
            _canInstall = status.CanInstall;
            _isInstalled = status.IsInstalled;
            _isOnline = status.IsOnline;
        }

        // Subscribe la evenimente
        PWA.OnInstallPromptReady += HandleInstallPromptReady;
        PWA.OnAppInstalled += HandleAppInstalled;
        PWA.OnSyncComplete += HandleSyncComplete;

        // Check queue status
        await UpdateQueueStatus();
    }

    private void HandleInstallPromptReady(object? sender, EventArgs e)
    {
        _canInstall = true;
        InvokeAsync(StateHasChanged);
    }

    private void HandleAppInstalled(object? sender, EventArgs e)
    {
        _isInstalled = true;
        _canInstall = false;
        InvokeAsync(StateHasChanged);
    }

    private void HandleSyncComplete(object? sender, SyncCompleteEventArgs e)
    {
        Logger.LogInformation("Sync complete: {Success} success, {Failed} failed", e.Success, e.Failed);
        InvokeAsync(async () =>
        {
            await UpdateQueueStatus();
            StateHasChanged();
        });
    }

    private async Task InstallPWA()
    {
        var installed = await PWA.InstallAsync();
        if (installed)
        {
            Logger.LogInformation("PWA installed successfully");
        }
    }

    private void Dismiss()
    {
        _dismissed = true;
    }

    private async Task UpdateQueueStatus()
    {
        var queueStatus = await PWA.GetQueueStatusAsync();
        _queueCount = queueStatus?.Count ?? 0;
    }

    public void Dispose()
    {
        PWA.OnInstallPromptReady -= HandleInstallPromptReady;
        PWA.OnAppInstalled -= HandleAppInstalled;
        PWA.OnSyncComplete -= HandleSyncComplete;
    }
}

