@using ValyanClinic.Services
@inject PWAService PWA
@inject ILogger<PWAInstallButton> Logger

@* Exemplu de componentÄƒ pentru instalare PWA *@

@if (_canInstall && !_isInstalled)
{
    <div class="pwa-install-banner">
        <div class="pwa-install-content">
            <div class="pwa-icon">ðŸ“±</div>
            <div class="pwa-text">
                <h4>InstaleazÄƒ aplicaÈ›ia</h4>
                <p>AcceseazÄƒ Valyan Clinic direct de pe ecranul principal</p>
            </div>
            <div class="pwa-actions">
                <button class="btn btn-primary" @onclick="InstallPWA">
                    <i class="fa fa-download"></i> InstaleazÄƒ
                </button>
                <button class="btn btn-secondary" @onclick="Dismiss">
                    Mai tÃ¢rziu
                </button>
            </div>
        </div>
    </div>
}

@if (_isInstalled)
{
    <div class="pwa-status">
        <i class="fa fa-check-circle text-success"></i>
        AplicaÈ›ia este instalatÄƒ
    </div>
}

@if (!_isOnline)
{
    <div class="offline-indicator">
        <i class="fa fa-wifi-slash"></i>
        Offline - Datele vor fi sincronizate automat
        @if (_queueCount > 0)
        {
            <span class="badge">@_queueCount Ã®n aÈ™teptare</span>
        }
    </div>
