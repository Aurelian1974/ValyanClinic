<!DOCTYPE html>
<html lang="ro">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ValyanMed - Sistem de management pentru clinici medicale" />
    <meta name="author" content="ValyanMed Team" />
    <base href="/" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    
    <!-- CSS Stylesheets -->
    <!-- Syncfusion CSS - loaded first -->
    <link href="_content/Syncfusion.Blazor.Themes/fluent2.css" rel="stylesheet" />
    
    <!-- FontAwesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Fluent UI CSS -->
    <link rel="stylesheet" href="_content/Microsoft.FluentUI.AspNetCore.Components/Microsoft.FluentUI.AspNetCore.Components.bundle.scp.css" />
    
    <!-- Application CSS - loaded last to override where needed -->
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["ValyanClinic.styles.css"]" />
    
    <!-- Error handling for async operations -->
    <script>
        window.addEventListener('error', function(e) {
            console.warn('Global error caught:', e.message);
        });
        
        window.addEventListener('unhandledrejection', function(e) {
            console.warn('Unhandled promise rejection:', e.reason);
            e.preventDefault();
        });
    </script>
</head>

<body>
    <fluent-design-system-provider use-defaults>
        <Routes />
    </fluent-design-system-provider>
    
    <!-- Blazor Scripts -->
    <script src="_framework/blazor.web.js"></script>
    
    <!-- Syncfusion Scripts -->
    <script src="_content/Syncfusion.Blazor.Core/scripts/syncfusion-blazor.min.js" type="text/javascript"></script>
</body>

</html>
