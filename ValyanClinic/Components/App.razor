<html lang="ro-RO">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="ValyanMed - Sistem de management pentru clinici medicale" />
    <meta name="author" content="ValyanMed Team" />
    <meta name="accept-charset" content="UTF-8" />
    <base href="/" />
    
    <!-- Romanian language and encoding declarations -->
    <meta http-equiv="Content-Language" content="ro-RO" />
    <meta name="language" content="Romanian" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    
    <!-- CSS Stylesheets -->
    <!-- Syncfusion CSS - loaded first -->
    <link href="_content/Syncfusion.Blazor.Themes/fluent2.css" rel="stylesheet" />
    
    <!-- FontAwesome CSS for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Application CSS - loaded last to override where needed -->
    <link rel="stylesheet" href="@Assets["app.css"]" />
    <link rel="stylesheet" href="@Assets["ValyanClinic.styles.css"]" />
    
    <!-- Toast Override CSS - FIXED PATH pentru a fi deasupra sidebar-ului -->
    <link rel="stylesheet" href="/css/toast-override.css" />
    
    <!-- Toast Modal Fix CSS - FIXED PATH pentru vizibilitate în modale -->
    <link rel="stylesheet" href="/css/toast-modal-fix.css" />
    
    <!-- Romanian diacritics font preload -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" as="style">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Error handling for async operations -->
    <script>
        // Set proper charset for JavaScript
        document.charset = "UTF-8";
        document.characterSet = "UTF-8";
        
        window.addEventListener('error', function(e) {
            console.warn('Global error caught:', e.message);
        });
        
        window.addEventListener('unhandledrejection', function(e) {
            console.warn('Unhandled promise rejection:', e.reason);
            e.preventDefault();
        });
    </script>
</head>

