@if (IsVisible)
{
    <div class="modal-overlay visible" @onclick="HandleOverlayClick">
        <div class="modal-container @(IsVisible ? "show" : "")" @onclick:stopPropagation="true">
            <div class="modal-header">
                <div class="modal-title">
                    <i class="fas fa-user-md"></i>
                    <h2>@(Model.IsEditMode ? "Editeaza Personal Medical" : "Adauga Personal Medical")</h2>
                </div>
                <button class="btn-close" @onclick="Close" type="button">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="modal-body">
                @if (IsLoading)
                {
                    <div class="loading-container">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Se incarca...</span>
                        </div>
                        <p>Se incarca datele...</p>
                    </div>
                }
                else
                {
                    <div class="info-card">
                        <h3 class="card-title">
                            <i class="fas fa-user"></i>
                            Date Generale
                        </h3>
                        <div class="info-grid">
                            <div class="form-group">
                                <label>Nume <span class="required">*</span></label>
                                <input type="text" class="form-control" @bind="Model.Nume" />
                            </div>
                            <div class="form-group">
                                <label>Prenume <span class="required">*</span></label>
                                <input type="text" class="form-control" @bind="Model.Prenume" />
                            </div>
                            <div class="form-group">
                                <label>Specializare</label>
                                <input type="text" class="form-control" @bind="Model.Specializare" />
                            </div>
                            <div class="form-group">
                                <label>Numar Licenta</label>
                                <input type="text" class="form-control" @bind="Model.NumarLicenta" />
                            </div>
                        </div>
                    </div>

                    <div class="info-card">
                        <h3 class="card-title">
                            <i class="fas fa-phone"></i>
                            Contact
                        </h3>
                        <div class="info-grid">
                            <div class="form-group">
                                <label>Telefon</label>
                                <input type="tel" class="form-control" @bind="Model.Telefon" />
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" class="form-control" @bind="Model.Email" />
                            </div>
                        </div>
                    </div>

                    <div class="info-card">
                        <h3 class="card-title">
                            <i class="fas fa-briefcase"></i>
                            Pozitie
                        </h3>
                        <div class="info-grid">
                            <div class="form-group">
                                <label>Departament</label>
                                <input type="text" class="form-control" @bind="Model.Departament" />
                            </div>
                            <div class="form-group">
                                <label>Pozitie</label>
                                <input type="text" class="form-control" @bind="Model.Pozitie" />
                            </div>
                            <div class="form-group">
                                <label>Status</label>
                                <select class="form-control" @bind="Model.EsteActiv">
                                    <option value="true">Activ</option>
                                    <option value="false">Inactiv</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    @if (HasError)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="fas fa-exclamation-triangle"></i>
                            @ErrorMessage
                        </div>
                    }
                }
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" @onclick="Close" type="button" disabled="@IsSaving">
                    <i class="fas fa-times"></i>
                    <span>Anuleaza</span>
                </button>
                <button class="btn btn-primary" @onclick="HandleSubmit" type="button" disabled="@IsSaving">
                    @if (IsSaving)
                    {
                        <span class="spinner-border spinner-border-sm" role="status"></span>
                        <span>Se salveaza...</span>
                    }
                    else
                    {
                        <i class="fas fa-save"></i>
                        <span>Salveaza</span>
                    }
                </button>
            </div>
        </div>
    </div>
}
