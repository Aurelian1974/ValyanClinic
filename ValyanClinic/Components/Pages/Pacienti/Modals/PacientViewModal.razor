@attribute [Authorize]
@rendermode InteractiveServer
@using ValyanClinic.Application.Features.PacientManagement.Queries.GetPacientById

<div class="modal-overlay @(IsVisible ? "visible" : "")" @onclick="HandleOverlayClick">
    <div class="modal-container @(IsVisible ? "show" : "")" @onclick:stopPropagation>
        <div class="modal-header">
            <div class="modal-title">
                <i class="fas fa-user-injured"></i>
                <h2>Detalii Pacient</h2>
            </div>
            <button class="btn-close" @onclick="Close" title="Inchide">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <div class="modal-body">
            @if (IsLoading)
            {
                <div class="loading-container">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Se incarca...</span>
                    </div>
                    <p>Se incarca datele...</p>
                </div>
            }
            else if (HasError)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    @ErrorMessage
                </div>
            }
            else if (PacientData != null)
            {
                <div class="tabs-container">
                    <div class="tab-buttons">
                        <button class="tab-button @(ActiveTab == "personal" ? "active" : "")" 
                                @onclick='() => SetActiveTab("personal")'>
                            <i class="fas fa-user"></i>
                            Date Personale
                        </button>
                        <button class="tab-button @(ActiveTab == "contact" ? "active" : "")" 
                                @onclick='() => SetActiveTab("contact")'>
                            <i class="fas fa-address-book"></i>
                            Contact
                        </button>
                        <button class="tab-button @(ActiveTab == "adresa" ? "active" : "")" 
                                @onclick='() => SetActiveTab("adresa")'>
                            <i class="fas fa-map-marker-alt"></i>
                            Adresa
                        </button>
                        <button class="tab-button @(ActiveTab == "medical" ? "active" : "")" 
                                @onclick='() => SetActiveTab("medical")'>
                            <i class="fas fa-heartbeat"></i>
                            Date Medicale
                        </button>
                        <button class="tab-button @(ActiveTab == "asigurare" ? "active" : "")" 
                                @onclick='() => SetActiveTab("asigurare")'>
                            <i class="fas fa-shield-alt"></i>
                            Asigurare
                        </button>
                        <button class="tab-button @(ActiveTab == "doctori" ? "active" : "")" 
                                @onclick='() => SetActiveTab("doctori")'>
                            <i class="fas fa-user-md"></i>
                            Doctori (@DoctoriAsociati.Count)
                        </button>
                        <button class="tab-button @(ActiveTab == "audit" ? "active" : "")" 
                                @onclick='() => SetActiveTab("audit")'>
                            <i class="fas fa-history"></i>
                            Audit
                        </button>
                    </div>

                    <div class="tab-content">
                        @if (ActiveTab == "personal")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-user-circle"></i>
                                        Informatii Generale
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <label>Cod Pacient</label>
                                            <div class="info-value badge-primary">@PacientData.Cod_Pacient</div>
                                        </div>
                                        <div class="info-item">
                                            <label>Status</label>
                                            <span class="status-badge @(PacientData.Activ ? "status-active" : "status-inactive")">
                                                @(PacientData.Activ ? "Activ" : "Inactiv")
                                            </span>
                                        </div>
                                        <div class="info-item full-width">
                                            <label>Nume Complet</label>
                                            <div class="info-value primary-text">@PacientData.NumeComplet</div>
                                        </div>
                                        @if (CanViewField("CNP") && !string.IsNullOrEmpty(PacientData.CNP))
                                        {
                                            <div class="info-item">
                                                <label>CNP</label>
                                                <div class="info-value">@PacientData.CNP</div>
                                            </div>
                                        }
                                        <div class="info-item">
                                            <label>Data Nasterii</label>
                                            <div class="info-value">@PacientData.Data_Nasterii.ToString("dd.MM.yyyy")</div>
                                        </div>
                                        <div class="info-item">
                                            <label>Varsta</label>
                                            <div class="info-value badge-secondary">@PacientData.Varsta ani</div>
                                        </div>
                                        <div class="info-item">
                                            <label>Sex</label>
                                            <div class="info-value">
                                                @if (PacientData.Sex == "M")
                                                {
                                                    <i class="fas fa-mars text-primary"></i>
                                                    <span>Masculin</span>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-venus text-danger"></i>
                                                    <span>Feminin</span>
                                                }
                                            </div>
                                        </div>
                                        <div class="info-item">
                                            <label>Data Inregistrare</label>
                                            <div class="info-value">@PacientData.Data_Inregistrare.ToString("dd.MM.yyyy")</div>
                                        </div>
                                        @if (PacientData.Ultima_Vizita.HasValue)
                                        {
                                            <div class="info-item">
                                                <label>Ultima Vizita</label>
                                                <div class="info-value">@PacientData.Ultima_Vizita.Value.ToString("dd.MM.yyyy")</div>
                                            </div>
                                        }
                                        <div class="info-item">
                                            <label>Numar Total Vizite</label>
                                            <div class="info-value badge-info">@PacientData.Nr_Total_Vizite</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ActiveTab == "contact")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-phone"></i>
                                        Telefon
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <label>Telefon Principal</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Telefon))
                                            {
                                                <div class="info-value">
                                                    <a href="tel:@PacientData.Telefon" class="contact-link">
                                                        <i class="fas fa-phone"></i>
                                                        @PacientData.Telefon
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                        <div class="info-item">
                                            <label>Telefon Secundar</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Telefon_Secundar))
                                            {
                                                <div class="info-value">
                                                    <a href="tel:@PacientData.Telefon_Secundar" class="contact-link">
                                                        <i class="fas fa-phone"></i>
                                                        @PacientData.Telefon_Secundar
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-envelope"></i>
                                        Email
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item full-width">
                                            <label>Email</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Email))
                                            {
                                                <div class="info-value">
                                                    <a href="mailto:@PacientData.Email" class="contact-link">
                                                        <i class="fas fa-envelope"></i>
                                                        @PacientData.Email
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-phone-volume"></i>
                                        Contact Urgenta
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <label>Persoana Contact</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Persoana_Contact))
                                            {
                                                <div class="info-value">@PacientData.Persoana_Contact</div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                        <div class="info-item">
                                            <label>Relatie</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Relatie_Contact))
                                            {
                                                <div class="info-value">@PacientData.Relatie_Contact</div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                        <div class="info-item full-width">
                                            <label>Telefon Urgenta</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Telefon_Urgenta))
                                            {
                                                <div class="info-value">
                                                    <a href="tel:@PacientData.Telefon_Urgenta" class="contact-link">
                                                        <i class="fas fa-phone"></i>
                                                        @PacientData.Telefon_Urgenta
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ActiveTab == "adresa")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-home"></i>
                                        Adresa
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item full-width">
                                            <label>Adresa</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Adresa))
                                            {
                                                <div class="info-value">@PacientData.Adresa</div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrata
                                                </div>
                                            }
                                        </div>
                                        <div class="info-item">
                                            <label>Localitate</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Localitate))
                                            {
                                                <div class="info-value">@PacientData.Localitate</div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">-</div>
                                            }
                                        </div>
                                        <div class="info-item">
                                            <label>Judet</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Judet))
                                            {
                                                <div class="info-value">@PacientData.Judet</div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">-</div>
                                            }
                                        </div>
                                        @if (!string.IsNullOrEmpty(PacientData.Cod_Postal))
                                        {
                                            <div class="info-item">
                                                <label>Cod Postal</label>
                                                <div class="info-value">@PacientData.Cod_Postal</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ActiveTab == "medical")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-heartbeat"></i>
                                        Date Medicale
                                    </h3>
                                @if (CanViewField("Alergii"))
                                {
                                    <div class="info-grid">
                                        <div class="info-item full-width">
                                            <label>Alergii</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Alergii))
                                            {
                                                <div class="info-value medical-info">
                                                    <i class="fas fa-exclamation-triangle text-warning"></i>
                                                    @PacientData.Alergii
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-check-circle text-success"></i>
                                                    Nu sunt inregistrate alergii
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                @if (CanViewField("BoliCronice"))
                                {
                                    <div class="info-grid">
                                        <div class="info-item full-width">
                                            <label>Boli Cronice</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Boli_Cronice))
                                            {
                                                <div class="info-value medical-info">
                                                    <i class="fas fa-info-circle text-info"></i>
                                                    @PacientData.Boli_Cronice
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-check-circle text-success"></i>
                                                    Nu sunt inregistrate boli cronice
                                                </div>
                                            }
                                        </div>
                                    </div>
                                }
                                    <div class="info-grid">
                                        <div class="info-item full-width">
                                            <label>Medic Familie</label>
                                            @if (!string.IsNullOrEmpty(PacientData.Medic_Familie))
                                            {
                                                <div class="info-value">
                                                    <i class="fas fa-user-md"></i>
                                                    @PacientData.Medic_Familie
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="info-value info-value-empty">
                                                    <i class="fas fa-minus-circle"></i>
                                                    Nu este inregistrat
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ActiveTab == "asigurare")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-shield-alt"></i>
                                        Informatii Asigurare
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <label>Asigurat</label>
                                            <span class="status-badge @(PacientData.Asigurat ? "status-active" : "status-inactive")">
                                                <i class="fas fa-@(PacientData.Asigurat ? "check" : "times")"></i>
                                                @(PacientData.Asigurat ? "Da" : "Nu")
                                            </span>
                                        </div>
                                        @if (PacientData.Asigurat)
                                        {
                                            @if (!string.IsNullOrEmpty(PacientData.CNP_Asigurat))
                                            {
                                                <div class="info-item">
                                                    <label>CNP Asigurat</label>
                                                    <div class="info-value">@PacientData.CNP_Asigurat</div>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(PacientData.Nr_Card_Sanatate))
                                            {
                                                <div class="info-item">
                                                    <label>Nr. Card Sanatate</label>
                                                    <div class="info-value">@PacientData.Nr_Card_Sanatate</div>
                                                </div>
                                            }
                                            @if (!string.IsNullOrEmpty(PacientData.Casa_Asigurari))
                                            {
                                                <div class="info-item full-width">
                                                    <label>Casa de Asigurari</label>
                                                    <div class="info-value">@PacientData.Casa_Asigurari</div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                        else if (ActiveTab == "doctori")
                        {
                            <div class="tab-pane active">
                                @if (IsLoadingDoctori)
                                {
                                    <div class="loading-container" style="text-align: center; padding: 3rem;">
                                        <div class="spinner-border text-primary" role="status">
                                            <span class="visually-hidden">Se încarcă...</span>
                                        </div>
                                        <p>Se încarcă doctori...</p>
                                    </div>
                                }
                                else if (DoctoriAsociati.Any())
                                {
                                    @if (DoctoriActivi.Any())
                                    {
                                        <div class="info-card">
                                            <h3 class="card-title">
                                                <i class="fas fa-check-circle text-success"></i>
                                                Doctori Activi (@DoctoriActivi.Count)
                                            </h3>
                                            @foreach (var doctor in DoctoriActivi)
                                            {
                                                <div class="doctor-card" style="background: white; border: 2px solid #e5e7eb; border-radius: 12px; padding: 1.25rem; margin-bottom: 1rem;">
                                                    <div class="doctor-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                                                        <div>
                                                            <h5 style="margin: 0; font-size: 1.125rem; color: #111827;">
                                                                <i class="fas fa-user-md text-primary"></i>
                                                                @doctor.DoctorNumeComplet
                                                            </h5>
                                                            @if (!string.IsNullOrEmpty(doctor.DoctorSpecializare))
                                                            {
                                                                <p style="margin: 0.25rem 0 0 0; font-size: 0.875rem; color: #6b7280;">@doctor.DoctorSpecializare</p>
                                                            }
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(doctor.TipRelatie))
                                                        {
                                                            <span class="badge @GetBadgeClass(doctor.TipRelatie)" style="padding: 0.375rem 0.75rem; font-size: 0.75rem; border-radius: 6px;">
                                                                @doctor.TipRelatie
                                                            </span>
                                                        }
                                                    </div>

                                                    <div class="info-grid" style="gap: 0.75rem;">
                                                        @if (!string.IsNullOrEmpty(doctor.DoctorTelefon))
                                                        {
                                                            <div class="info-item">
                                                                <label style="font-size: 0.8125rem; color: #6b7280;">Telefon</label>
                                                                <div class="info-value" style="font-size: 0.875rem;">
                                                                    <a href="tel:@doctor.DoctorTelefon" class="contact-link">
                                                                        <i class="fas fa-phone"></i>
                                                                        @doctor.DoctorTelefon
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(doctor.DoctorEmail))
                                                        {
                                                            <div class="info-item">
                                                                <label style="font-size: 0.8125rem; color: #6b7280;">Email</label>
                                                                <div class="info-value" style="font-size: 0.875rem;">
                                                                    <a href="mailto:@doctor.DoctorEmail" class="contact-link">
                                                                        <i class="fas fa-envelope"></i>
                                                                        @doctor.DoctorEmail
                                                                    </a>
                                                                </div>
                                                            </div>
                                                        }
                                                        <div class="info-item">
                                                            <label style="font-size: 0.8125rem; color: #6b7280;">Data asocierii</label>
                                                            <div class="info-value" style="font-size: 0.875rem;">
                                                                @doctor.DataAsocierii.ToString("dd.MM.yyyy") 
                                                                <span style="color: #6b7280;">(@FormatZile(doctor.ZileDeAsociere))</span>
                                                            </div>
                                                        </div>
                                                        @if (!string.IsNullOrEmpty(doctor.Motiv))
                                                        {
                                                            <div class="info-item full-width">
                                                                <label style="font-size: 0.8125rem; color: #6b7280;">Motiv asociere</label>
                                                                <div class="info-value" style="font-size: 0.875rem;">
                                                                    <i class="fas fa-info-circle text-info"></i>
                                                                    @doctor.Motiv
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        @* Nu facem nimic, pentru ca nu sunt doctori activi *@
                                    }
                                
                                    @if (DoctoriInactivi.Any())
                                    {
                                        <div class="info-card" style="margin-top: 1.5rem;">
                                            <h3 class="card-title">
                                                <i class="fas fa-history text-muted"></i>
                                                Istoric Relații Inactive (@DoctoriInactivi.Count)
                                            </h3>
                                            @foreach (var doctor in DoctoriInactivi)
                                            {
                                                <div class="doctor-card" style="background: #f9fafb; border: 2px solid #e5e7eb; border-radius: 12px; padding: 1.25rem; margin-bottom: 1rem; opacity: 0.85;">
                                                    <div class="doctor-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1rem;">
                                                        <div>
                                                            <h5 style="margin: 0; font-size: 1.125rem; color: #6b7280;">
                                                                <i class="fas fa-user-md"></i>
                                                                @doctor.DoctorNumeComplet
                                                            </h5>
                                                            @if (!string.IsNullOrEmpty(doctor.DoctorSpecializare))
                                                            {
                                                                <p style="margin: 0.25rem 0 0 0; font-size: 0.875rem; color: #6b7280;">@doctor.DoctorSpecializare</p>
                                                            }
                                                        </div>
                                                        <span class="badge badge-secondary" style="padding: 0.375rem 0.75rem; font-size: 0.75rem; border-radius: 6px; background: #94a3b8; color: white;">INACTIV</span>
                                                    </div>

                                                    <div class="info-grid" style="gap: 0.75rem;">
                                                        <div class="info-item">
                                                            <label style="font-size: 0.8125rem; color: #6b7280;">Perioada</label>
                                                            <div class="info-value" style="font-size: 0.875rem; color: #6b7280;">
                                                                @doctor.DataAsocierii.ToString("dd.MM.yyyy") - 
                                                                @(doctor.DataDezactivarii?.ToString("dd.MM.yyyy") ?? "N/A")
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="empty-state" style="text-align: center; padding: 3rem; color: #6b7280;">
                                        <i class="fas fa-user-md fa-3x" style="margin-bottom: 1.5rem; color: #d1d5db;"></i>
                                        <p style="font-size: 1.125rem; margin-bottom: 0; color: #374151;">Nu există doctori asociați acestui pacient.</p>
                                    </div>
                                }
                            </div>
                        }
                        else if (ActiveTab == "audit")
                        {
                            <div class="tab-pane active">
                                <div class="info-card">
                                    <h3 class="card-title">
                                        <i class="fas fa-history"></i>
                                        Informatii Audit
                                    </h3>
                                    <div class="info-grid">
                                        <div class="info-item">
                                            <label>Data Crearii</label>
                                            <div class="info-value">@PacientData.Data_Crearii.ToString("dd.MM.yyyy HH:mm")</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(PacientData.Creat_De))
                                        {
                                            <div class="info-item">
                                                <label>Creat De</label>
                                                <div class="info-value">@PacientData.Creat_De</div>
                                            </div>
                                        }
                                        <div class="info-item">
                                            <label>Ultima Modificare</label>
                                            <div class="info-value">@PacientData.Data_Ultimei_Modificari.ToString("dd.MM.yyyy HH:mm")</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(PacientData.Modificat_De))
                                        {
                                            <div class="info-item">
                                                <label>Modificat De</label>
                                                <div class="info-value">@PacientData.Modificat_De</div>
                                            </div>
                                        }
                                    </div>
                                </div>

                                @if (!string.IsNullOrEmpty(PacientData.Observatii))
                                {
                                    <div class="info-card">
                                        <h3 class="card-title">
                                            <i class="fas fa-comment-alt"></i>
                                            Observatii
