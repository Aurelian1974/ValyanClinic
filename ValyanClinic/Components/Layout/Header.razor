@* Header Component pentru ValyanClinic *@

<header class="app-header">
    <div class="header-left">
        <div class="breadcrumb-container">
            @foreach (var item in breadcrumbItems)
            {
                @if (item.Url != null && !item.IsActive)
                {
                    <a href="@item.Url" class="breadcrumb-item">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </a>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
                else if (item.IsActive)
                {
                    <span class="breadcrumb-item active">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                }
                else
                {
                    <span class="breadcrumb-item non-clickable">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
            }
        </div>
    </div>

    <div class="header-right">
        <button class="btn-icon" title="Notificări">
            <i class="fas fa-bell"></i>
            <span class="badge">3</span>
        </button>

        <button class="btn-icon" title="Mesaje">
            <i class="fas fa-envelope"></i>
            <span class="badge">5</span>
        </button>

        <div class="user-profile">
            <img src="images/avatar-default.png" 
                 alt="User Avatar" 
                 class="user-avatar"
                 onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 width=%2240%22 height=%2240%22%3E%3Ccircle cx=%2220%22 cy=%2220%22 r=%2220%22 fill=%22%2393c5fd%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 text-anchor=%22middle%22 dy=%22.3em%22 fill=%22white%22 font-size=%2216%22 font-weight=%22bold%22%3EA%3C/text%3E%3C/svg%3E'" />
            <div class="user-info">
                <span class="user-name">@UserName</span>
                <span class="user-role">@UserRole</span>
            </div>
            <i class="fas fa-chevron-down"></i>
        </div>
    </div>
</header>
