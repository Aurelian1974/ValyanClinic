@rendermode InteractiveServer
@* Header Component pentru ValyanClinic *@

<header class="app-header">
    <div class="header-left">
        <div class="breadcrumb-container">
            @foreach (var item in breadcrumbItems)
            {
                @if (item.Url != null && !item.IsActive)
                {
                    <a href="@item.Url" class="breadcrumb-item">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </a>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
                else if (item.IsActive)
                {
                    <span class="breadcrumb-item active">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                }
                else
                {
                    <span class="breadcrumb-item non-clickable">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
            }
        </div>
    </div>

    <div class="header-right">
        <button class="btn-icon" title="Notificari">
            <i class="fas fa-bell"></i>
            <span class="badge">3</span>
        </button>

        <button class="btn-icon" title="Mesaje">
            <i class="fas fa-envelope"></i>
            <span class="badge">5</span>
        </button>

        <div class="user-profile" @onclick="ToggleUserMenu">
            <img src="@GetUserAvatarUrl()" 
                 alt="User Avatar" 
                 class="@GetAvatarCssClass()"
                 @ref="avatarImageRef" />
            <div class="@GetAvatarFallbackCssClass()">@GetUserInitials()</div>
            <div class="user-info">
                <span class="user-name">@UserName</span>
                <span class="user-role">@UserRole</span>
            </div>
            <i class="fas fa-chevron-down"></i>
      
            @if (ShowUserMenu)
            {
                <div class="user-dropdown" @onclick:stopPropagation>
                    <div class="dropdown-header">
                        <div class="dropdown-user-info">
                            <strong>@UserName</strong>
                            <small>@UserRole</small>
                        </div>
                    </div>
                    <div class="dropdown-divider"></div>
                    <a href="/profile" class="dropdown-item">
                        <i class="fas fa-user"></i>
                        <span>Profil</span>
                    </a>
                    <a href="/settings" class="dropdown-item">
                        <i class="fas fa-cog"></i>
                        <span>Setari</span>
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="/logout" class="dropdown-item logout-item">
                        <i class="fas fa-sign-out-alt"></i>
                        <span>Deconectare</span>
                    </a>
                </div>
            }
        </div>
    </div>
</header>
