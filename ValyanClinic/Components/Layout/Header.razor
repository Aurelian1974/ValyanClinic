@* Header Component pentru ValyanClinic *@

<header class="app-header">
    <div class="header-left">
        <div class="breadcrumb-container">
            @foreach (var item in breadcrumbItems)
            {
                @if (item.Url != null && !item.IsActive)
                {
                    <a href="@item.Url" class="breadcrumb-item">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </a>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
                else if (item.IsActive)
                {
                    <span class="breadcrumb-item active">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                }
                else
                {
                    <span class="breadcrumb-item non-clickable">
                        @if (!string.IsNullOrEmpty(item.Icon))
                        {
                            <i class="fas @item.Icon"></i>
                        }
                        <span>@item.Text</span>
                    </span>
                    <i class="fas fa-chevron-right breadcrumb-separator"></i>
                }
            }
        </div>
    </div>

    <div class="header-right">
        <button class="btn-icon" title="Notificări">
            <i class="fas fa-bell"></i>
            <span class="badge">3</span>
        </button>

        <button class="btn-icon" title="Mesaje">
            <i class="fas fa-envelope"></i>
            <span class="badge">5</span>
        </button>

        <div class="user-profile">
            <img src="/images/avatar-default.png" 
                 alt="User Avatar" 
                 class="user-avatar"
                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
            <div class="user-avatar-fallback" style="display:none; width:32px; height:32px; border-radius:50%; background:linear-gradient(135deg, #93c5fd, #60a5fa); color:white; align-items:center; justify-content:center; font-weight:700; font-size:14px;">A</div>
            <div class="user-info">
                <span class="user-name">@UserName</span>
                <span class="user-role">@UserRole</span>
            </div>
            <i class="fas fa-chevron-down"></i>
        </div>
    </div>
</header>
