@rendermode InteractiveServer
@using Syncfusion.Blazor.Navigations

<div class="sidebar @(isCollapsed ? "collapsed" : "")" id="main-sidebar">
    <div class="sidebar-header">
        <div class="logo-container">
            <i class="fas fa-clinic-medical logo-icon"></i>
            @if (!isCollapsed)
            {
                <div>
                    <h2>ValyanClinic</h2>
                    <p class="subtitle">Sistem Integrat de Management al Clinicii dumneavoastra</p>
                </div>
            }
        </div>
        <button type="button" class="btn-collapse" @onclick="HandleToggle" title="@GetCollapseButtonTitle()">
            <i class="fas @GetCollapseButtonIcon()"></i>
        </button>
    </div>

    <div class="nav-menu">
        @* Home - Level 0 *@
        <div class="nav-item">
            <a href="/" class="nav-link" title="Acasa">
                <i class="fas fa-home"></i>
                @if (!isCollapsed)
                {
                    <span>Acasa</span>
                }
            </a>
        </div>

        @* Pacienti - Level 1 (Parent) *@
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="nav-section-header" @onclick="TogglePacienti">
                    <div class="nav-section-title">
                        <i class="fas fa-user-injured"></i>
                        <span>Pacienti</span>
                    </div>
                    <i class="fas fa-chevron-@(isPacientiExpanded ? "up" : "down") nav-chevron"></i>
                </div>

                @if (isPacientiExpanded)
                {
                    <div class="nav-items-group">
                        <div class="nav-item nav-item-child">
                            <a href="/pacienti/vizualizare" class="nav-link nav-link-child" title="Vizualizare Pacienti">
                                <i class="fas fa-eye"></i>
                                <span>Vizualizare Pacienti</span>
                            </a>
                        </div>

                        <div class="nav-item nav-item-child">
                            <a href="/pacienti/administrare" class="nav-link nav-link-child" title="Administrare Pacienti">
                                <i class="fas fa-user-cog"></i>
                                <span>Administrare Pacienti</span>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                @* Show icon when collapsed *@
                <div class="nav-item">
                    <a href="/pacienti/vizualizare" class="nav-link" title="Pacienti">
                        <i class="fas fa-user-injured"></i>
                    </a>
                </div>
            }
        </div>

        @* Administrare - Level 1 (Parent) *@
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="nav-section-header" @onclick="ToggleAdministrare">
                    <div class="nav-section-title">
                        <i class="fas fa-cog"></i>
                        <span>Administrare</span>
                    </div>
                    <i class="fas fa-chevron-@(isAdministrareExpanded ? "up" : "down") nav-chevron"></i>
                </div>

                @if (isAdministrareExpanded)
                {
                    @* Administrare Personal - Level 2 *@
                    <div class="nav-subsection">
                        <div class="nav-subsection-header" @onclick="ToggleAdministrarePersonal">
                            <div class="nav-subsection-title">
                                <i class="fas fa-users-cog"></i>
                                <span>Administrare Personal</span>
                            </div>
                            <i class="fas fa-chevron-@(isAdministrarePersonalExpanded ? "up" : "down") nav-chevron-small"></i>
                        </div>

                        @if (isAdministrarePersonalExpanded)
                        {
                            <div class="nav-sub-items">
                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/personal" class="nav-link nav-link-child" title="Personal">
                                        <i class="fas fa-users"></i>
                                        <span>Personal</span>
                                    </a>
                                </div>

                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/personal-medical" class="nav-link nav-link-child" title="Personal Medical">
                                        <i class="fas fa-user-md"></i>
                                        <span>Personal Medical</span>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>

                    @* Administrare Clinica - Level 2 (NOU) *@
                    <div class="nav-subsection">
                        <div class="nav-subsection-header" @onclick="ToggleAdministrareClinica">
                            <div class="nav-subsection-title">
                                <i class="fas fa-hospital"></i>
                                <span>Administrare Clinica</span>
                            </div>
                            <i class="fas fa-chevron-@(isAdministrareClinicaExpanded ? "up" : "down") nav-chevron-small"></i>
                        </div>

                        @if (isAdministrareClinicaExpanded)
                        {
                            <div class="nav-sub-items">
                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/departamente" class="nav-link nav-link-child" title="Departamente">
                                        <i class="fas fa-building"></i>
                                        <span>Departamente</span>
                                    </a>
                                </div>

                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/sectii" class="nav-link nav-link-child" title="Sectii">
                                        <i class="fas fa-door-open"></i>
                                        <span>Sectii</span>
                                    </a>
                                </div>

                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/pozitii" class="nav-link nav-link-child" title="Pozitii">
                                        <i class="fas fa-briefcase"></i>
                                        <span>Pozitii</span>
                                    </a>
                                </div>

                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/specializari" class="nav-link nav-link-child" title="Specializari">
                                        <i class="fas fa-user-md"></i>
                                        <span>Specializari</span>
                                    </a>
                                </div>

                                <div class="nav-item nav-item-child">
                                    <a href="/administrare/administrare-clinica/utilizatori" class="nav-link nav-link-child" title="Utilizatori">
                                        <i class="fas fa-users-cog"></i>
                                        <span>Utilizatori</span>
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                @* Show icon when collapsed *@
                <div class="nav-item">
                    <a href="/administrare/personal" class="nav-link" title="Administrare">
                        <i class="fas fa-cog"></i>
                    </a>
                </div>
            }
        </div>

        @* Programari - Level 1 (Parent) *@
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="nav-section-header" @onclick="ToggleProgramari">
                    <div class="nav-section-title">
                        <i class="fas fa-calendar-check"></i>
                        <span>Programari</span>
                    </div>
                    <i class="fas fa-chevron-@(isProgramariExpanded ? "up" : "down") nav-chevron"></i>
                </div>

                @if (isProgramariExpanded)
                {
                    <div class="nav-items-group">
                        <div class="nav-item nav-item-child">
                            <a href="/programari" class="nav-link nav-link-child" title="Calendar">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Calendar</span>
                            </a>
                        </div>

                        <div class="nav-item nav-item-child">
                            <a href="/programari/lista" class="nav-link nav-link-child" title="Lista Programari">
                                <i class="fas fa-list"></i>
                                <span>Lista Programari</span>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                @* Show icon when collapsed *@
                <div class="nav-item">
                    <a href="/programari" class="nav-link" title="Programari">
                        <i class="fas fa-calendar-check"></i>
                    </a>
                </div>
            }
        </div>

        @* Rapoarte - Level 1 *@
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="nav-section-header" @onclick="ToggleRapoarte">
                    <div class="nav-section-title">
                        <i class="fas fa-chart-bar"></i>
                        <span>Rapoarte</span>
                    </div>
                    <i class="fas fa-chevron-@(isRapoarteExpanded ? "up" : "down") nav-chevron"></i>
                </div>

                @if (isRapoarteExpanded)
                {
                    <div class="nav-items-group">
                        <div class="nav-item nav-item-child">
                            <a href="/rapoarte/statistici" class="nav-link nav-link-child" title="Statistici">
                                <i class="fas fa-chart-line"></i>
                                <span>Statistici</span>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                @* Show icon when collapsed *@
                <div class="nav-item">
                    <a href="/rapoarte/statistici" class="nav-link" title="Rapoarte">
                        <i class="fas fa-chart-bar"></i>
                    </a>
                </div>
            }
        </div>

        @* Monitorizare - Level 1 *@
        <div class="nav-section">
            @if (!isCollapsed)
            {
                <div class="nav-section-header" @onclick="ToggleMonitorizare">
                    <div class="nav-section-title">
                        <i class="fas fa-heart-pulse"></i>
                        <span>Monitorizare</span>
                    </div>
                    <i class="fas fa-chevron-@(isMonitorizareExpanded ? "up" : "down") nav-chevron"></i>
                </div>

                @if (isMonitorizareExpanded)
                {
                    <div class="nav-items-group">
                        <div class="nav-item nav-item-child">
                            <a href="/health" class="nav-link nav-link-child" target="_blank" title="Health Check">
                                <i class="fas fa-heartbeat"></i>
                                <span>Health Check</span>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                @* Show icon when collapsed *@
                <div class="nav-item">
                    <a href="/health" class="nav-link" title="Monitorizare" target="_blank">
                        <i class="fas fa-heart-pulse"></i>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
