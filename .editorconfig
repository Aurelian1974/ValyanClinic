root = true

[*.{cs,razor,cshtml,html}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true

# Additional settings for consistent formatting
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{css,scss,js,ts}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = false

# Project files
[*.{csproj,sln,props,targets}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true