root = true

[*.{cs,razor,cshtml,html}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true

# Additional settings for consistent formatting
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# C# code analysis rules
[*.cs]
# Disable specific warnings at solution level
# CS8602 - Dereference of a possibly null reference (handled by null checks in code)
dotnet_diagnostic.CS8602.severity = suggestion
# CS8601 - Possible null reference assignment
dotnet_diagnostic.CS8601.severity = suggestion

# Razor components
[*.razor]
# RZ10012 - Found markup element with unexpected name (component namespace issues)
dotnet_diagnostic.RZ10012.severity = none

[*.{css,scss,js,ts}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{json,yml,yaml}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = false

# Project files
[*.{csproj,sln,props,targets}]
charset = utf-8-bom
end_of_line = crlf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true