    -- Contact urgență
    persoana_contact VARCHAR(150),
    telefon_urgenta VARCHAR(15),
    relatie_contact VARCHAR(50),
    
    -- Informații administrative
    data_inregistrare DATETIME DEFAULT CURRENT_TIMESTAMP,
